<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".views.main.AddFriendActivity"
            android:layout_marginStart="@dimen/normal"
            android:layout_marginEnd="@dimen/normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/large"
                android:layout_marginBottom="@dimen/large">

                <Button
                    android:id="@+id/buttonBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_baseline_arrow_back"
                    android:backgroundTint="#000000"
                    android:layout_marginEnd="@dimen/normal"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tambah Teman"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <SearchView
                android:paddingStart="8dp"
                android:searchIcon="@drawable/ic_search"
                android:background="@drawable/box_melengkung"
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="@dimen/normal"
                android:layout_marginEnd="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginStart="8dp"
                android:layout_marginBottom="@dimen/normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasil Pencarian : "
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:paddingTop="@dimen/normal"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="32dp"
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/box_melengkung"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="@dimen/normal">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/recyclerView"
                    tools:listitem="@layout/item_rv_teman"
                    android:layout_height="match_parent"/>


            </LinearLayout>



        </LinearLayout>


