<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/normal"
        android:background="@color/abu"
        android:paddingEnd="@dimen/normal"
        tools:context=".views.pengaturan.TelponFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large"
            android:layout_marginBottom="@dimen/large"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/normal"
                android:background="@drawable/ic_baseline_arrow_back"
                android:backgroundTint="#000000" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubah  No. Telefon"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginBottom="@dimen/large"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/boxputih"
                android:gravity="center"
                android:paddingStart="@dimen/large"
                android:paddingEnd="@dimen/large"
                android:text="+62"
                android:textColor="#4A5CFF"
                android:textSize="18sp" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_password_lama"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/normal"
                android:background="@drawable/boxputih"
                android:paddingStart="@dimen/large"
                android:paddingTop="12dp"
                android:paddingEnd="@dimen/large"
                app:boxBackgroundColor="#ffffff">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_phone"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:background="@drawable/boxputih"
                    android:text="81225273320"
                    android:textColor="#666666" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


        <Button
            android:id="@+id/button_submit"
            android:layout_width="182dp"
            android:layout_height="57dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/normal"
            android:background="@drawable/box_biru"
            android:text="Simpan"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <include layout="@layout/view_progress" />
    </LinearLayout>

</layout>