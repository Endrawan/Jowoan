<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".CobaActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_hariBelajar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="@dimen/normal"
        android:layout_marginBottom="@dimen/large"
        android:background="@drawable/box_melengkung"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hari Belajar"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/normal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/xsmall"
                    android:layout_marginEnd="@dimen/xsmall">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/hadir_hari"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/small"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Senin"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/xsmall"
                    android:layout_marginEnd="@dimen/xsmall">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/tidak_hadir_hari"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/small"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selasa"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/xsmall"
                    android:layout_marginEnd="@dimen/xsmall">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/tidak_hadir_hari"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/small"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rabu"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/xsmall"
                    android:layout_marginEnd="@dimen/xsmall">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/tidak_hadir_hari"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/small"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kamis"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/xsmall"
                    android:layout_marginEnd="@dimen/xsmall">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/tidak_hadir_hari"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/small"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jum'at"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/xsmall"
                    android:layout_marginEnd="@dimen/xsmall">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/tidak_hadir_hari"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/small"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sabtu"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/xsmall"
                    android:layout_marginEnd="@dimen/xsmall">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/tidak_hadir_hari"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/small"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Minggu"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView_totalStreaks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0 Hari Aktif"
                android:drawablePadding="@dimen/small"
                android:layout_margin="@dimen/normal"
                app:drawableStartCompat="@drawable/ic_calendar" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>